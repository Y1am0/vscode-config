{
  // =====================================================
  // Window & Global UI
  // =====================================================
  // Disable command center (top bar clutter)
  "window.commandCenter": false,

  // Disable tips, hints, and onboarding noise
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.empty.hint": "hidden",

  // Hide layout controls & editor action buttons
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",

  // =====================================================
  // Theme, Icons & Visual Identity
  // =====================================================
  "workbench.colorTheme": "Vesper",
  "workbench.iconTheme": "symbols",

  // =====================================================
  // Editor Tabs & Navigation
  // =====================================================
  // Disable preview editors so refactoring can update multiple files
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  // Hide tabs completely (Zen-style workflow)
  "workbench.editor.showTabs": "none",

  // Reveal already-open files instead of reopening
  "workbench.editor.revealIfOpen": true,

  // Auto-close editors when files are deleted
  "workbench.editor.closeOnFileDelete": true,

  // Enable smarter language detection via history
  "workbench.editor.historyBasedLanguageDetection": true,

  // =====================================================
  // Editor Typography & Spacing
  // =====================================================
  "editor.fontFamily": "'JetBrains Mono', 'SF Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,

  // Smooth visual movement
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",

  // =====================================================
  // Formatting, Whitespace & Files
  // =====================================================
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "all",

  // Keep files clean & consistent
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // =====================================================
  // Formatting & Linting
  // =====================================================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Explicit-only actions prevent surprise edits
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
  },

  // ESLint validation targets
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
  ],

  // =====================================================
  // Navigation & IntelliSense Behavior
  // =====================================================
  // Jump directly instead of showing peek panels
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",

  // Disable hover popups & lightbulbs (keyboard-first)
  "editor.hover.enabled": "off",
  "editor.lightbulb.enabled": "off",

  // =====================================================
  // Scrollbars, Minimap & Visual Noise
  // =====================================================
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.minimap.enabled": false,

  // =====================================================
  // Brackets & Structural Guides
  // =====================================================
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",

  // =====================================================
  // Sidebar, Activity Bar & Status Bar
  // =====================================================
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "breadcrumbs.enabled": false,

  // =====================================================
  // Quick Open & Lists
  // =====================================================
  "workbench.list.smoothScrolling": true,
  "workbench.quickOpen.closeOnFocusLost": true,
  "workbench.quickOpen.preserveInput": true,

  // =====================================================
  // Terminal
  // =====================================================
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.2,

  // =====================================================
  // Git & Source Control
  // =====================================================
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",

  // =====================================================
  // AI / Copilot
  // =====================================================
  // Disable Copilot globally but allow Next Edit Suggestions
  "github.copilot.enable": {
    "*": false,
  },
  "github.copilot.nextEditSuggestions.enabled": true,

  // =====================================================
  // Language-Specific Overrides
  // =====================================================
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // =====================================================
  // Misc / Edge Cases
  // =====================================================
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.editorAssociations": {
    "*.svg": "default",
  },
  "symbols.hidesExplorerArrows": false,

  // PHP validator explicitly disabled
  "php.validate.executablePath": "",

  // Disable Chat command center UI
  "chat.commandCenter.enabled": false,
}
